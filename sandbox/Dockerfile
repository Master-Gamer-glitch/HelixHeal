FROM python:3.12-slim

WORKDIR /sandbox

RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install common test tools
RUN pip install --no-cache-dir \
    pytest \
    pytest-cov \
    flake8 \
    ruff \
    mypy

CMD ["python", "-m", "pytest", "--tb=short", "-q"]
